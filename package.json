{
	"name": "eggjs-demo",
	"version": "1.0.0",
	"description": "使用eggjs开发的后端应用",
	"private": true,
	"egg": {
		"typescript": true
	},
	"scripts": {
		"start": "egg-scripts start --daemon --title=egg-server-eggjs-demo",
		"stop": "egg-scripts stop --title=egg-server-eggjs-demo",
		"dev": "egg-bin dev",
		"test:local": "egg-bin test -p",
		"test": "npm run lint -- --fix && npm run test:local",
		"cov": "egg-bin cov -p",
		"ci": "npm run lint && npm run cov && npm run tsc && npm run clean",
		"lint": "eslint . --ext .ts --cache",
		"tsc": "tsc",
		"clean": "tsc -b --clean"
	},
	"dependencies": {
		"egg": "^3.15.0",
		"egg-scripts": "^2.17.0",
		"egg-tracer": "^2.0.0"
	},
	"devDependencies": {
		"@eggjs/tsconfig": "1",
		"@types/mocha": "10",
		"@types/node": "20",
		"egg-bin": "6",
		"egg-mock": "5",
		"eslint": "8",
		"eslint-config-egg": "13",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"prettier": "^3.4.2",
		"typescript": "5"
	},
	"engines": {
		"node": ">=20.10.0"
	},
	"repository": {
		"type": "git",
		"url": ""
	},
	"author": "less-step-jss",
	"license": "MIT"
}
